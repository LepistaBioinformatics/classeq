{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "#/definitions/nullString"
        },
        "name": {
            "$ref": "#/definitions/nullString"
        },
        "rooted": {
            "type": "boolean"
        },
        "root": {
            "$ref": "#/definitions/clade"
        }
    },
    "required": [
        "id",
        "name",
        "rooted",
        "root"
    ],
    "definitions": {
        "nullString": {
            "type": [
                "string",
                "null"
            ]
        },
        "nullNumber": {
            "type": [
                "number",
                "null"
            ],
            "minimum": 0
        },
        "nullInteger": {
            "type": [
                "integer",
                "null"
            ],
            "minimum": 1
        },
        "clade": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "A unique identifier for the clade. It is a uuid of version 3 and namespace 99999999-9999-9999-9999-999999999999."
                },
                "name": {
                    "$ref": "#/definitions/nullString"
                },
                "confidence": {
                    "$ref": "#/definitions/nullNumber"
                },
                "branch_length": {
                    "$ref": "#/definitions/nullNumber"
                },
                "color": {
                    "$ref": "#/definitions/nullString"
                },
                "width": {
                    "$ref": "#/definitions/nullNumber"
                },
                "taxid": {
                    "$ref": "#/definitions/nullInteger"
                },
                "related_rank": {
                    "$ref": "#/definitions/nullString"
                },
                "clades": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/clade"
                    }
                }
            },
            "required": [
                "id",
                "name",
                "confidence",
                "branch_length",
                "color",
                "width",
                "taxid",
                "related_rank",
                "clades"
            ]
        },
        "cladeArray": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/clade"
            }
        }
    }
}
